{
    "name": "telegram/bot-basic-plus",
    "description": "Basic Plus Telegram Bot with PDF Processing",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zip": "*",
        "ext-gd": "*",
        "longman/telegram-bot": "^0.83.0",
        "monolog/monolog": "^3.0",
        "intervention/image": "^2.7",
        "setasign/fpdi": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 666 user.json error.log"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}